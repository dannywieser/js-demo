{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2017", "dom", "dom.iterable"],
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "inlineSources": true,
    "pretty": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "jsx": "react",
    "outDir": "dist"
  },
  "compileOnSave": false,
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "outDir": "dist"
  }
}
